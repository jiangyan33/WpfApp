<Window x:Class="WpfApp12.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12" 
        xmlns:controls="clr-namespace:WpfApp12.Controls"
        mc:Ignorable="d"
        Title="CustomControlClient" Height="180" Width="300">
    <StackPanel>
        <controls:ColorPickerUserControl x:Name="colorControl" Margin="2" Padding="3" Color="Black" ColorChanged="colorControl_ColorChanged" />
        <TextBlock Name="textBlock" Margin="10">The current color is #FF000000</TextBlock>
    </StackPanel>
</Window>
