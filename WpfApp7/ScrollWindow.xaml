<Window x:Class="WpfApp7.ScrollWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="ScrollWindow" Height="200" Width="300">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="底部" Name="Content1" Padding="10,10,10,10" HorizontalAlignment="Center" Click="Content1_Click"/>
        <ScrollViewer Grid.Row="1" Name="scrollViewer" CanContentScroll="True">
            <StackPanel Margin="3">
                <Button Content="Content1" Height="100"/>
                <Button Content="Content2" Height="100"/>
                <Button Content="Content3" Height="100"/>
                <Button Content="Content4" Height="100"/>
                <Button Content="Content5" Height="100"/>
                <Button Content="Content6" Height="100"/>
                <Button Content="Content7" Height="100"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
